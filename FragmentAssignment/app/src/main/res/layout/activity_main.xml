<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sum"
                android:textSize="12sp"
                android:background="@drawable/curved_button"
                android:textColor="#fff"
                android:id="@+id/btnSum"
                android:layout_weight="1"
                android:layout_marginRight="10sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area of circle"
                android:textSize="12sp"
                android:background="@drawable/curved_button"
                android:textColor="#fff"
                android:id="@+id/btnCircle"
                android:layout_marginRight="10sp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reverse Number"
                android:id="@+id/btnReverse"
                android:textSize="12sp"
                android:background="@drawable/curved_button"
                android:textColor="#fff"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palendrome"
                android:id="@+id/btnPalendrome"
                android:textSize="12sp"
                android:background="@drawable/curved_button"
                android:textColor="#fff"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automorphic"
                android:id="@+id/btnAuto"
                android:textSize="12sp"
                android:background="@drawable/curved_button"
                android:textColor="#fff"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reverse String"
                android:id="@+id/btnRevStr"
                android:textSize="12sp"
                android:background="@drawable/curved_button"
                android:textColor="#fff"
                android:layout_marginTop="10sp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layoutContainer">

    </LinearLayout>

</LinearLayout>